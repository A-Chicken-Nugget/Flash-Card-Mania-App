<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csc331.flash_card_mania_app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pages.MainMenu"
            android:label="Main Menu"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.MyLibraries"
            android:label="My Libraries"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.SelectLibrary"
            android:label="Select Library"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.ManageLibrary"
            android:label="Create Library"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.ViewLibrary"
            android:label="View Library"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.ManageCard"
            android:label="Manage Card"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.SelectSettings"
            android:label="Select Settings"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.Learn"
            android:label="Learn"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.Test"
            android:label="Test"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".pages.TestResults"
            android:label="Test Results"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>